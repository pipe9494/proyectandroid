<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/textView"
            android:layout_width="230dp"
            android:layout_height="47dp"
            android:text="The Triqui's war"
            android:textColor="#2dccf7"
            android:textSize="32dp"
            android:textStyle="bold|italic"

            tools:layout_editor_absoluteX="82dp"
            tools:layout_editor_absoluteY="28dp" />

        <TextView
            android:id="@+id/txvWinner"
            android:layout_width="225dp"
            android:layout_height="33dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="#35ea63"
            android:textSize="28sp"
            android:textStyle="bold|italic"
            tools:layout_editor_absoluteX="85dp"
            tools:layout_editor_absoluteY="96dp" />

        <TableLayout
            android:layout_width="266dp"
            android:layout_height="381dp"
            android:layout_marginTop="28dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/txvWinner">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <ImageButton
                    android:id="@+id/button1"
                    android:layout_width="86dp"
                    android:layout_height="82dp"
                    android:background="@drawable/styleb1"
                    app:srcCompat="@android:drawable/ic_menu_help" />


                <ImageButton
                    android:id="@+id/button2"
                    android:layout_width="86dp"
                    android:layout_height="82dp"
                    android:background="@drawable/styleb1"
                    app:srcCompat="@android:drawable/ic_menu_help" />

                <ImageButton
                    android:id="@+id/button3"
                    android:layout_width="86dp"
                    android:layout_height="82dp"
                    android:background="@drawable/styleb1"
                    app:srcCompat="@android:drawable/ic_menu_help" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/button11"
                    android:layout_width="86dp"
                    android:layout_height="82dp"
                    android:background="@drawable/styleb1"
                    app:srcCompat="@android:drawable/ic_menu_help" />

                <ImageButton
                    android:id="@+id/button22"
                    android:layout_width="86dp"
                    android:layout_height="82dp"
                    android:background="@drawable/styleb1"
                    app:srcCompat="@android:drawable/ic_menu_help" />

                <ImageButton
                    android:id="@+id/button33"
                    android:layout_width="86dp"
                    android:layout_height="82dp"
                    android:background="@drawable/styleb1"
                    app:srcCompat="@android:drawable/ic_menu_help" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:id="@+id/button111"
                    android:layout_width="86dp"
                    android:layout_height="82dp"
                    android:background="@drawable/styleb1"
                    app:srcCompat="@android:drawable/ic_menu_help" />

                <ImageButton
                    android:id="@+id/button222"
                    android:layout_width="86dp"
                    android:layout_height="82dp"
                    android:background="@drawable/styleb1"
                    app:srcCompat="@android:drawable/ic_menu_help" />

                <ImageButton
                    android:id="@+id/button333"
                    android:layout_width="86dp"
                    android:layout_height="82dp"
                    android:background="@drawable/styleb1"
                    app:srcCompat="@android:drawable/ic_menu_help" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="24sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <TextView
                    android:id="@+id/conta1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/styleb2"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/conta2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/styleb3"
                    android:text="2"
                    android:textAlignment="center"
                    android:textSize="30sp" />
            </TableRow>
        </TableLayout>

    </LinearLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

</android.support.constraint.ConstraintLayout>